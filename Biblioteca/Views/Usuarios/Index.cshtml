@model IEnumerable<Biblioteca.Models.MVC>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <div>
            @if (Model.Count()>0){
                   <table class="table table-bordered border-dark mt-3 text-center">
                <thead class="table table-dark">
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th scope="col">@Html.DisplayNameFor(m=>m.Nombre)</th>
                        <th scope="col">@Html.DisplayNameFor(m=>m.Apellido)</th>
                        <th scope="col">@Html.DisplayNameFor(m=>m.Telefono)</th>
                        
                    </tr>
                </thead>
                <tbody class="table table-secondary">
                  @foreach(var item in Model)
                  {
                    <tr>
                        <td>@item.Id</td>

                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Telefono</td>
               
                        <td>
                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#librosEditar" >Editar</button>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#librosEliminar">Eliminar</button>
                            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#librosDetalles">Detalles</button>
                        </td>
                    </tr>
                  }
                    
                </tbody>
            </table>
            }else{
                <p>No hay registros</p>
            }
        </div>
    </body>
    </html>